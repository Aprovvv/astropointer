<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цвета для светлой темы -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_onPrimary</item>
        <item name="android:windowBackground">@color/light_background</item>
    </style>

    <style name="TextAppearance.Material3.BodyMedium" parent="TextAppearance.Material3.BodyMedium" tools:ignore="ResourceCycle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.App.SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_track</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
</resources>